# Server Configuration
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/talk_to_api

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Pinecone Configuration (obrigatório para docker-compose)
# Obtenha em https://www.pinecone.io: Console → API Keys (formato pcsk_...) e Environment do projeto.
PINECONE_API_KEY=pcsk_xxxxxxxxxxxx
PINECONE_INDEX_NAME=talk-to-api-rag
PINECONE_ENVIRONMENT=gcp-starter
# 0 = roda seed (cria índice e popula motivos fortes); 1 = pula seed
SKIP_PINECONE_SEED=0

# Session Configuration
SESSION_EXPIRY_MINUTES=15

# RAG Configuration
RAG_QUALIFIED_SCORE_THRESHOLD=0.75

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
